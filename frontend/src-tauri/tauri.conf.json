{
  "build": {
    "distDir": "../dist",
    "devPath": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "package": {
    "productName": "Verba",
    "version": "1.0.17"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": false,
        "scope": [
          "$RESOURCE/**"
        ]
      },
      "path": {
        "all": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.verba.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "shortDescription": "100% Private Offline AI Meeting Assistant",
      "longDescription": "Record meetings, transcribe speech, and generate structured notesâ€”all locally on your device. No cloud. No tracking. No subscription.",
      "externalBin": [],
      "resources": [
        "../../backend"
      ],
      "deb": {
        "depends": [
          "python3",
          "python3-pip",
          "python3-venv",
          "ffmpeg"
        ]
      },
      "rpm": {
        "depends": [
          "python3",
          "python3-pip",
          "ffmpeg"
        ]
      },
      "appimage": {
        "bundleMediaFramework": false
      },
      "windows": {
        "wix": {
          "language": [
            "en-US"
          ]
        }
      },
      "macOS": {
        "minimumSystemVersion": "11.0"
      }
    },
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:8000; media-src 'self' blob: mediastream:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'"
    },
    "windows": [
      {
        "title": "Verba - Offline AI Meeting Assistant",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": false,
        "userAgent": "Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36"
      }
    ]
  }
}